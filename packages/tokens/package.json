{
  "name": "@mch-group/design-tokens",
  "description": "MCH Design Tokens",
  "version": "0.0.11",
  "bugs": "https://bitbucket.org/mchappsrvcs/artbasel-design-tokens/issues",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/mchappsrvcs/artbasel-design-tokens.git",
    "directory": "packages/themes"
  },
  "homepage": "https://bitbucket.org/mchappsrvcs/artbasel-design-tokens",
  "keywords": [
    "sass",
    "css",
    "bootstrap",
    "tokens"
  ],
  "license": "ISC",
  "author": "DMI",
  "publishConfig": {
    "access": "restricted"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "scripts": {
    "build": "npm run clean && npm run convert && style-dictionary build --config config.js && npm run copy",
    "convert": "token-transformer tokens.json tokens/tokens-studio.json",
    "clean": "rm -rf build/android/src/main/res/values build/scss build/css build/js tokens/tokens-studio.json",
    "copy": "copyfiles ./AndroidManifest.xml ./build/android/src/main/"
  },
  "devDependencies": {
    "@tokens-studio/sd-transforms": "^0.4.4",
    "copyfiles": "^2.4.1",
    "style-dictionary": "^3.7.2",
    "token-transformer": "^0.0.30"
  }
}
